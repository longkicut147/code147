#2.1
for i in range(3, 13):
    print(i)


#2.2
n = int(input("Viết 1 số bất kì: "))
if n > 0:
    for i in range(0, n+1):
        print(i)
else:
    print("số lớn hơn 0 pls")


#2.3
n = int(input("Viết 1 số bất kì: "))
a = n %2==0
if a == 0:
    for i in range(n, 0, -2):
        print(i)
elif a == 1:
    for i in range(n-1, 0, -2):
        print(i)


#2.4
from turtle import *
a = int(input("số cạnh đa giác: "))
for i in range(0, a+1):
    forward(100)
    left(120)
mainloop()